</div>
<script>
  //Loop para preencher os carrosséis com as oportunidades
    for (let i = 1; i < 4; i++) {
    console.log("Entrou no loop")
    fetch('http://localhost:1337/oportunidades/' + i)
      .then(response => {
      if (!response.ok) {
        return response.text().then(text => { throw new Error(text) })
      }
      return response.json()
      //substitui o elemento do carrossel pelo link da foto
    }).then(data => {document.getElementById('carousel' + i).src = data.link_foto_destaque })
      .catch(error => { console.error(error) })

  }
</script>